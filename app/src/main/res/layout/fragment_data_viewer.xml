<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_anchorGravity="center"
    tools:context=".DataFragment">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/period_Layaout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/divider7"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add" />

                    <TextView
                        android:id="@+id/period_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal|center_horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Dia a visualizar"
                        android:textColor="@color/teal_700"
                        android:textSize="28sp" />

                    <View
                        android:id="@+id/divider8"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="26dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextTime2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:backgroundTint="#018685"
                    android:ems="6"
                    android:gravity="center"
                    android:hint="@string/seleccionar"
                    android:inputType="date"
                    android:text="12/01/2023"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/data_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add" />

                    <TextView
                        android:id="@+id/data_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal|center_horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Datos"
                        android:textColor="@color/teal_700"
                        android:textSize="28sp" />

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="26dp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/temperature_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/temperature_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:paddingLeft="32dp"
                        android:text="Temperatura"
                        android:textAlignment="gravity"
                        android:textColor="@color/teal_700"
                        android:textSize="22sp" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add"
                        android:layout_marginTop="9dp" />

                    <LinearLayout
                        android:id="@+id/GraphHumidity_Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/graphHumidityTitle_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Datos recopilados"
                            android:textColor="@color/teal_700"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/divider9"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="10dp"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="#C8C8C8"
                            android:backgroundTintMode="add" />
                    </LinearLayout>

                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/temperature_GraphView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="20dp"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/divider_muestreoDown" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/humidity_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp">


                    <TextView
                        android:id="@+id/humidity_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:paddingLeft="32dp"
                        android:text="Humedad"
                        android:textAlignment="gravity"
                        android:textColor="@color/teal_700"
                        android:textSize="22sp" />

                    <View

                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="20dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add" />

                    <LinearLayout
                        android:id="@+id/GraphCO_Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/graphCOTitle_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Datos recopilados"
                            android:textColor="@color/teal_700"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/divider10"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="10dp"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="#C8C8C8"
                            android:backgroundTintMode="add" />
                    </LinearLayout>

                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/humidity_GraphView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="20dp"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/divider_muestreoDown" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/co2_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/co2_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:paddingLeft="32dp"
                        android:text="Dioxido de carbono(CO2)"
                        android:textAlignment="gravity"
                        android:textColor="@color/teal_700"
                        android:textSize="22sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="20dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#C8C8C8"
                        android:backgroundTintMode="add" />

                    <LinearLayout
                        android:id="@+id/GraphTemperature_Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/graphTitle_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Datos recopilados"
                            android:textColor="@color/teal_700"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="10dp"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="#C8C8C8"
                            android:backgroundTintMode="add" />
                    </LinearLayout>

                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/co2_GraphView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/divider_muestreoDown" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>