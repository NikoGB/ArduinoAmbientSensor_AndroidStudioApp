<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="-10dp"
                android:tintMode="multiply"
                app:srcCompat="@android:drawable/ic_menu_manage"
                app:tint="@color/teal_500" />

            <TextView
                android:id="@+id/tittle_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-black"
                android:text="Ajustar valores"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#C8C8C8"
            android:backgroundTintMode="add" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/start_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Muestreado"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:scaleX="-1"
                    android:tintMode="multiply"
                    app:srcCompat="?attr/actionModeCloseDrawable"
                    app:tint="#616161" />

                <TextView
                    android:id="@+id/end_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Ajustado"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/actTemp_textViewer"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="38°"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/divider9"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/temperature_editText"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:hint="30°"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleTemperature_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Temperatura"
                    android:textAlignment="center"
                    android:textColor="#5E5E5E"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/actHumi_textView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="24,55*"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/divider10"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/humidity_editText"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:hint="20.05*"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleHumidity_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Humedad"
                    android:textAlignment="center"
                    android:textColor="#5E5E5E"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/actCO2_textView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="300p"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/divider11"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/co2_editText"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:hint="270p"
                    android:inputType="numberSigned|number|numberDecimal"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleCO2_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="CO2"
                    android:textAlignment="center"
                    android:textColor="#5E5E5E"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

        <View
            android:id="@+id/divider13"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="26dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#C8C8C8"
            android:backgroundTintMode="add"
            android:visibility="visible" />

        <Button
            android:id="@+id/adjust_button"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Ajustar"
            android:textAlignment="center"
            android:textSize="28sp"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconGravity="textEnd"
            app:iconPadding="10dp"
            app:iconSize="38dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>